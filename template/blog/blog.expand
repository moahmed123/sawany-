                                <div class="tt-post-img">                                    
                                    <a href="{{ link('blog/post', '&post_id=' ~ post['post_id'], 'SSL') }}">
                                        <img src="{{ image(post['post_image']) }}" alt="{{ post['name'] }}">
                                    </a>
                                </div>
                                <div class="tt-post-content">
                                    <div class="tt-tag">                                        
                                        <a href="{{ link('blog/category', '&category_id=' ~ post['category_id'], 'SSL') }}">
                                            {{ post['category_name'] }}
                                        </a>
                                    </div>
                                    <h2 class="tt-title">
